        if (acciones[command]) {
            const acc = acciones[command];
            const mension = msg.message.extendedTextMessage?.contextInfo?.mentionedJid[0] || msg.key.remoteJid;
            const autor = msg.pushName || 'Usuario';
            const gifSeleccionado = acc.gifs[Math.floor(Math.random() * acc.gifs.length)];

            await sock.sendMessage(from, { 
                video: { url: gifSeleccionado }, 
                caption: `*${autor}* ${acc.texto} @${mension.split('@')[0]}`,
                gifPlayback: true, // Esto hace que se vea como GIF y no como video
                mentions: [mension]
            });
        }
